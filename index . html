    <script>
        // Initialize Pi SDK
        const Pi = window.Pi;
        Pi.init({ version: "2.0", sandbox: true });

        async function authenticatePi() {
            try {
                const scopes = ['username', 'payments'];
                function onIncompletePaymentFound(payment) { /* Handle incomplete payments */ }
                
                const auth = await Pi.authenticate(scopes, onIncompletePaymentFound);
                alert("Welcome, " + auth.user.username + "! Connection successful.");
            } catch (err) {
                alert("Please open this in the Pi Browser to connect your wallet.");
            }
        }
    </script>

